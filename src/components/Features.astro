---
import Container from "./Container.astro";
---

<div id="features">
    <Container>
        <div class="md:w-2/3 lg:w-1/2">
            <h2 class="my-8 text-2xl font-bold text-gray-700 dark:text-white md:text-4xl">Una conferenza tutta da scoprire</h2>
            <p class="text-gray-600 dark:text-gray-300">Scopri le tracks disponibili</p>
        </div>

        <div class="mt-16 grid divide-x divide-y divide-gray-100 overflow-hidden rounded-3xl border border-gray-100 text-gray-600 dark:divide-gray-700 dark:border-gray-700 sm:grid-cols-2 lg:grid-cols-4 lg:divide-y-0 xl:grid-cols-4">
            <div class="group relative bg-white transition hover:z-[1] hover:shadow-2xl hover:shadow-gray-600/10 dark:bg-gray-800">
                <div class="relative space-y-8 p-8 py-12">
                    <img src="images/cultura.svg" class="w-12" width="512" height="512" alt="bug illustration" />

                    <div class="space-y-2">
                        <h5 class="text-xl font-semibold text-gray-700 transition group-hover:text-[#0BCBFD] dark:text-white">Cultura</h5>
